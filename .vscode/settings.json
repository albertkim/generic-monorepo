{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "root",
        },
        {
          "name": "api",
          "commands": ["cd api"]
        },
        {
          "name": "web",
          "commands": ["cd web"]
        },
        {
          "name": "common",
          "commands": ["cd common"]
        }
      ]
    }
  ]
}
